<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.valor.mediafire"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="9" android:targetSdkVersion="10" android:maxSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="Mediafire" android:logo="@drawable/ic_launcher">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" android:icon="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FolderActivity"
            android:label="@string/title_activity_folder" android:icon="@drawable/ic_launcher" android:logo="@drawable/ic_launcher" android:theme="@style/AppTheme">
        </activity>
        <activity android:label="Preferences" android:name=".activities.PrefsActivity" android:icon="@drawable/ic_launcher"></activity>
    </application>

</manifest>